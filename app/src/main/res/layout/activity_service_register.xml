<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceRegister"
    android:background="@drawable/background3">

    <EditText
        android:id="@+id/ServiceEmail"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textAlignment="center"
        android:textColor="#000000"
        android:background="@drawable/txt_back"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="101dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp"
        android:text="E-mail"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="180dp"
        android:text="Password"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="36dp"
        android:text="Confirm Password"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/ServicePass"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textAlignment="center"
        android:background="@drawable/txt_back"
        android:textColor="#000000"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="171dp" />

    <EditText
        android:id="@+id/ServiceConPass"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textAlignment="center"
        android:background="@drawable/txt_back"
        android:textColor="#000000"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="241dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/ServiceReg"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:text="Register"
        android:textColor="#ffffff"
        android:background="@drawable/btn_back3"
        android:layout_below="@+id/ServiceConPass"
        android:layout_marginTop="59dp"/>

    <Button
        android:id="@+id/SerLogin"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:textColor="#0000ff"
        android:background="@drawable/btn_back4"
        android:layout_below="@+id/ServiceReg"
        android:layout_marginTop="15dp"
        android:text="Already have a account, Log In" />
</RelativeLayout>