<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceRegister">

    <EditText
        android:id="@+id/ServiceEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="73dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="82dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/ServiceEmail"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/ServiceEmail"
        android:text="E-mail" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="60dp"
        android:text="Password" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="60dp"
        android:text="Confirm Password" />

    <EditText
        android:id="@+id/ServicePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/ServiceConPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/ServicePass"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/ServiceReg"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="39dp"
        android:text="Register"
        android:layout_below="@+id/ServiceConPass"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/SerLogin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ServiceReg"
        android:layout_marginTop="15dp"
        android:text="Already have a account, Log In" />
</RelativeLayout>