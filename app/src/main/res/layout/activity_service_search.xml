<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.r19.localservicefinder.ServiceSearch"
    android:background="@drawable/background5">

    <EditText
        android:id="@+id/cityname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="157dp"
        android:ems="10"
        android:background="@drawable/txt_back"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cityname"
        android:layout_alignBottom="@+id/cityname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:text="Enter city name" />

    <Button
        android:id="@+id/SearchSubmit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Search"
        android:background="@drawable/btn_back4"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginBottom="88dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/cityname"
        android:layout_marginTop="44dp"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:text="District name" />

    <EditText
        android:id="@+id/districtname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/cityname"
        android:layout_below="@+id/cityname"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="@drawable/txt_back"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView39"
        android:layout_below="@+id/districtname"
        android:layout_marginTop="44dp"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:text="Proffesion" />

    <Spinner
        android:id="@+id/proffesion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView48"
        android:layout_alignStart="@+id/districtname" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:text="Make a Search for service provider. All Three details are required correctly"
        android:textColor="#000000"
        android:textSize="22dp"
        android:layout_above="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

</RelativeLayout>
