<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.r19.localservicefinder.ServiceSearch">

    <EditText
        android:id="@+id/EnterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/ser1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EnterName"
        android:layout_alignBottom="@+id/EnterName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:text="Enter a name" />

    <Button
        android:id="@+id/SearchSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sername1"
        android:layout_below="@+id/EnterName"
        android:layout_marginStart="27dp"
        android:layout_marginTop="18dp"
        android:text="Search" />

    <TextView
        android:id="@+id/sername1"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/ser1"
        android:layout_alignBottom="@+id/ser1"
        android:layout_alignEnd="@+id/EnterName"
        android:text="result" />

    <TextView
        android:id="@+id/ser1"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/SearchSubmit"
        android:layout_marginTop="22dp" />

    <ListView
        android:id="@+id/ListView"
        android:text="search Item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sername1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

</RelativeLayout>
