<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.r19.localservicefinder.ServiceEmailSend"
    android:background="@drawable/background1">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="65dp"
        android:text="A password reset link has been sent to your registered e-mail. Please check your emai and click the link on it. After reseting your password go to your Log in page and try to login again."
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Slogin"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:textColor="#ffffff"
        android:background="@drawable/btn_back1"
        android:text="Back To Log In Page" />
</RelativeLayout>
