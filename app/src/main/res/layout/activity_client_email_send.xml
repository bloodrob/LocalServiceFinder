<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.r19.localservicefinder.ClientEmailSend"
    android:background="@drawable/background1">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:text="A password reset link has been sent to your registered e-mail. Please check your emai and click the link on it. After reseting your password go to your Log in page and try to login again."
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="13dp"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/Blogin"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:textColor="#000000"
        android:text="Back To Log In Page"
        android:background="@drawable/btn_back5"/>
</RelativeLayout>
