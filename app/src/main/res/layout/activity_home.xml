<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.dev.r19.localservicefinder.Home">
    <ImageView
        android:background="@drawable/back_register"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        android:text="You are in : "
        android:textStyle="bold"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/currentCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_back4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="20dp"
        android:text="CHANGE"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"></LinearLayout>

        <ScrollView
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="130dp"
                        android:layout_height="120dp" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:text="market"
                        android:textColor="#1a1aff"/>

                    <ImageButton
                        android:id="@+id/Doctor"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/ic_launcher" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:text="doctor"
                        android:textColor="#1a1aff"/>
                    <ImageButton
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginTop="20dp"
                        android:layout_width="130dp"
                        android:layout_height="120dp" />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:text="Education"
                        android:textColor="#1a1aff"/>
                    <ImageButton
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginTop="20dp"
                        android:layout_width="130dp"
                        android:layout_height="120dp" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:text="clubs"
                        android:textColor="#1a1aff"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/ic_launcher"
                        />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:text="ASTC"
                        android:textColor="#1a1aff"/>

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/ic_launcher"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:text="HOTEL"
                        android:textColor="#1a1aff"/>

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/ic_launcher" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:text="Maalls"
                        android:textColor="#1a1aff"/>
                    <ImageButton
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginTop="20dp"
                        android:layout_width="130dp"
                        android:layout_height="120dp" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:text="Halls"
                        android:textColor="#1a1aff"/>
                    <ImageButton
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginTop="20dp"
                        android:layout_width="130dp"
                        android:layout_height="120dp" />
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:text="elctronic"
                        android:textColor="#1a1aff"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</RelativeLayout>
