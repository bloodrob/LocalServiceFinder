<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientCredentials">
    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/background1"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="80dp"
            android:text="WELCOME TO CLIENT"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#1A1AC7"/>

    </FrameLayout>


    <Button
        android:id="@+id/ToClientLogin"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="110dp"
        android:text="Login"
        android:background="@drawable/btn_back1"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/ToClientReg"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="110dp"
        android:text="Register"
        android:background="@drawable/btn_back2"
        android:textColor="#ffffff"/>


</RelativeLayout>